<h1>All my tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li>
    <div class="d-flex">
      <% if task.completed %>
      <i class="far fa-check-square"></i>
      <% else%>
      <i class="far fa-square"></i>
      <% end %>
      <h5 class="pl-2"><%= task.title %><h5>
    </div>
    <p><%= task.details %> </p>
    <%= link_to "back to Tasks", task_path(task) %>
  </li>
  <% end %>
</ul>
