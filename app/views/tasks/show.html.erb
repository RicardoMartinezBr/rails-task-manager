<div class="d-flex mt-3">
<% if @task.completed %>
    <div class="mt-3 mr-2"> <i class="far fa-check-square"></i></div>
    <% else%>
    <div class="mt-3 mr-2"><i class="far fa-square"></i></div>
      <% end %>
<h1><%= @task.title %></h1>
</div>
<h2><%= @task.details %> </h2>
<%= link_to "back to Tasks", tasks_path %>
<br>
<%= link_to "edit task", edit_task_path(@task) %>
<br>
 <%= link_to 'destroy ', task_path(@task), method: :delete, data: {confirm: "Are you sure?"}%> <i class="fas fa-trash-alt"> </i>
